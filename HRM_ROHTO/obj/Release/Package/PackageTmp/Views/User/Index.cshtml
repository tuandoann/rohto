@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
}
@using (Html.BeginForm())
{
    <div class="box-body">
        <div id="lblError"></div>
        <div id="lblSuccess"></div>
        <div id="lblInfo"></div>
        <section class="content-header">
            <h1>
                Tài khoản
            </h1>
            <ol class="breadcrumb"></ol>
        </section>
        <section class="content">
            <div class="box box-danger color-palette-box">
                <div class="box-header with-border">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-md-10">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-1">
                                @if (ViewBag.Add == true)
                                {
                                    <a class="btn btn-block btn-primary" href="/User/Create"><i class="fa fa-plus"></i></a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <section class="content">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box-body">
                                <table id="lv_list" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width:18%;">Tên đăng nhập</th>
                                            <th>Họ và tên</th>
                                            <th style="width:18%;">Vai trò</th>
                                            <th data-orderable="false"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < ViewBag.List.Count; i++)
                                        {
                                            string Name = @ViewBag.List[i].FullName.ToString();
                                            string ID = @ViewBag.List[i].UserID.ToString();
                                            <tr>
                                                <td>@ViewBag.List[i].Username</td>
                                                <td>@ViewBag.List[i].FullName</td>
                                                <td>@ViewBag.List[i].RoleName</td>
                                                <td style="width:80px; text-align:center;">
                                                    <div class="row">
                                                        @if (ViewBag.Edit == true)
                                                        {
                                                            <a class="href btn btn-info btn-xs" href="/User/Edit/@ID" id="edit" style="">Sửa</a>
                                                        }
                                                        @if (ViewBag.Delete == true)
                                                        {
                                                            <a class="href btn btn-danger btn-xs" onclick="return fn_DeleteConfirm();" href="/User/Delete/@ID" id="delete" style="">Xóa</a>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>

                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </section>
            </div>
        </section>
    </div>
}

<script>
    $(function () {
        var table = $('#lv_list').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "iDisplayLength": 20,
            "lengthMenu": [[10, 20, 50, 100], [10, 20, 50, 100]],
            "select": true,
            //"processing": true,
            //"serverSide": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Vietnamese.json"
            }
        });
    });

</script>
