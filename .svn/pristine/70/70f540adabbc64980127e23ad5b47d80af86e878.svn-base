@model HRM_ROHTO.Models.SYS_USER

@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: #3c8dbc !important;
        border-color: #367fa9 !important;
        padding: 1px 10px !important;
        color: #fff;
    }
</style>
@using (@Html.BeginForm(new { id = "form" }))
{
    @Html.HiddenFor(x => x.UserID)
    <body onload="setFocus()">
        <div class="box-body">
            <div id="lblError"></div>
            <div id="lblSuccess"></div>
            <div id="lblInfo"></div>
            <section class="content-header">
                <h1 class="MT_Title">
                    Cập nhật tài khoản
                </h1>
                <ol class="breadcrumb"></ol>
            </section>
            <section class="content">
                <div class="box box-success color-palette-box">
                    <div class="box-header with-border">
                        <div class="row">
                            <div class="col-md-10 col-sm-8 col-xs-6">
                            </div>
                            <div class="col-md-1 col-sm-2 col-xs-3">
                                <button type="submit" class="btn btn-block btn-google" onclick="return btnEditSaveUserClick();">
                                    <i class="fa fa-save"></i>
                                </button>
                            </div>
                            <div class="col-md-1 col-sm-2 col-xs-3">
                                <a class="btn btn-block bg-purple" href="/User/Index"><i class="fa fa-arrow-left"></i></a>
                            </div>
                        </div>
                    </div>
                    <section class="content">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="box-body">
                                    <div class="row" style="padding-bottom:10px;">
                                        <div class="col-md-2">Tên đăng nhập<span style="color:red;">*</span></div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-2">Mật khẩu<span style="color:red;">*</span></div>
                                        <div class="col-md-3">
                                            @Html.PasswordFor(u => u.Password, new { @class = "form-control " })
                                        </div>
                                    </div>

                                    <div class="row" style="padding-bottom:5px;">
                                        <div class="col-md-2">Họ và tên<span style="color:red;">*</span></div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(u => u.FullName, new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-2">
                                            <div class="checkbox">
                                                <label>
                                                    @Html.CheckBoxFor(x => x.IsActive, new { @checked = true }) Sử dụng
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3"></div>
                                    </div>

                                    <div class="row" style="padding-bottom:10px;">
                                        <div class="col-md-2">Email</div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(u => u.Email, new { @class = "form-control", @type = "email" })
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-2">Số thẻ</div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(u => u.CardNumber, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="row" style="padding-bottom:5px;">
                                        <div class="col-md-2">Vai trò</div>
                                        <div class="col-md-3">
                                            @Html.DropDownListFor(u => u.RoleID, (IEnumerable<SelectListItem>)ViewBag.listRole, new { @class = "form-control select2 uRoleID" })
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-2"></div>
                                        <div class="col-md-3"></div>
                                    </div>
                                </div><!-- /.box-body -->
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </section>
                </div>
            </section>
        </div>
    </body>
}

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script src="../../Content/plugins/select2/select2.full.min.js"></script>
    <script src="~/App_Script/User.js"></script>
    <script src="~/App_Script/Gobal.js"></script>
    <script>
        $(".select2").select2();
        function setFocus() { document.getElementById("UserName").focus(); }
    </script>
}
