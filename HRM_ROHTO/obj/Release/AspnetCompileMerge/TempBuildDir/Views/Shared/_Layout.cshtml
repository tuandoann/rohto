    <script src="http://cdn.jsdelivr.net/webshim/1.12.4/polyfiller.js"></script>

    <script type="text/javascript">
        $('.isNumber').autoNumeric('init', { vMin: -10000, mDec: 0 });
        $('.timeonly').datetimepicker({ format: 'HH:mm' });
        $('.dateonly').datetimepicker({ format: 'MM/DD/YYYY' });
        //$(".select2").select2();

        // Dung cho date picker cua fire fox
        webshims.setOptions('waitReady', false);
        webshims.setOptions('forms-ext', { types: 'date' });
        webshims.polyfill('forms forms-ext');

        //iCheck for checkbox and radio inputs
        $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue',
            radioClass: 'iradio_minimal-blue'
        });
        //Red color scheme for iCheck
        $('input[type="checkbox"].minimal-red, input[type="radio"].minimal-red').iCheck({
            checkboxClass: 'icheckbox_minimal-red',
            radioClass: 'iradio_minimal-red'
        });
        //Flat red color scheme for iCheck
        $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
            checkboxClass: 'icheckbox_flat-green',
            radioClass: 'iradio_flat-green'
        });

        //Red color scheme for iCheck
        $('input[type="checkbox"].minimal-blue, input[type="radio"].minimal-blue').iCheck({
            checkboxClass: 'icheckbox_minimal-blue',
            radioClass: 'iradio_minimal-blue'
        });

        $('input').on('ifClicked', function (event) {
            var checked = !event.currentTarget.checked;

            checkAllRole(checked, event.currentTarget.id, "View");
            checkAllRole(checked, event.currentTarget.id, "Add");
            checkAllRole(checked, event.currentTarget.id, "Edit");
            checkAllRole(checked, event.currentTarget.id, "Delete");
            checkAllRole(checked, event.currentTarget.id, "Print");

            if (event.currentTarget.id == "ckAll") {
                if (checked) {
                    $(".ck").prop("checked", true);
                    $(".ck").iCheck('update');
                }
                else {
                    $(".ck").prop('checked', false);
                    $(".ck").iCheck('update');
                }
            }
            else {
                if (!checked) {
                    $("#ckAll").prop('checked', false);
                    $("#ckAll").iCheck('update');
                }
            }
        });

        function checkAllRole(checked, id, name) {
            if (id == "ckAll_" + name) {
                if (checked) {
                    $(".ck_" + name).prop("checked", true);
                    $(".ck_" + name).iCheck('update');
                }
                else {
                    $(".ck_" + name).prop('checked', false);
                    $(".ck_" + name).iCheck('update');
                }
            }
        }

    </script>
    <script>
        function setHeartbeat() {
            setTimeout("heartbeat()", 10000); // every 15 min
        }

        function heartbeat() {
            $.ajax({
                url: "/Home/KeepSession",
                type: 'GET',
                dataType: "json",
                cache: false,
                success: function () {
                    setHeartbeat();
                },

                error: function (xhr) {
                }
            });
        }

        $(document).ready()
        {
            CheckPermission();
            $('#spinner').fadeIn();
            setHeartbeat();
        }

        function CheckPermission() {
            var pathname = window.location.pathname;
            $.ajax({
                url: "/Home/CheckPermission",
                type: 'GET',
                data: {
                    Path: pathname
                },
                dataType: "json",
                async: false,
                cache: false,
                success: function (data) {
                    if (data == false) {
                        window.location.href = "/Login/Login";
                    }
                },

                error: function (xhr) {
                }
            });
        }

        $(window).load(function () {
            $("#spinner").fadeOut(200);
        });
    </script>
